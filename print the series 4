import java.io.*;
import java.util.*;
public class Solution 
{
  public static void main(String[] args)
  {

        Scanner s=new Scanner(System.in);
            int n;
        n=s.nextInt();
        int i,j=0,k=0;
        for(i=0;i<n;i++)
        {
            if(i%2==0)
                k=i;
            else
                k=i/2;
        }
            System.out.println(k);
         }
}
